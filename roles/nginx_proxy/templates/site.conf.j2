server {
  listen 80;
  server_name {{ item.host }}{% if item.aliases is defined %}{% for alias in item.aliases %} {{ alias }}{% endfor %}{% endif %};
  client_max_body_size 0;
 
  {% if item.ssl is defined %}
  listen 443 ssl;
  ssl_certificate {{ nginx_proxy_ssl_dir }}/{{ item.host }}.pem;
  ssl_certificate_key {{ nginx_proxy_ssl_dir }}/{{ item.host }}.key;
  ssl_session_timeout 5m;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-SHA384:ECDHE-RSA-AES128-SHA256:ECDHE-RSA-AES256-SHA:ECDHE-RSA-AES128-SHA:DHE-RSA-AES256-SHA:DHE-RSA-AES128-SHA;
  ssl_session_cache shared:SSL:50m;
  ssl_dhparam {{ nginx_proxy_ssl_dir}}/dhparam.pem;
  ssl_prefer_server_ciphers on;

  if ($scheme != "https") 
  {
    rewrite ^ https://$host$request_uri? permanent;
  }

  {% endif %}

  {% if item.php is defined %}
  index index.php index.html index.htm;

  location ~ \.php$ {
    fastcgi_split_path_info ^(.+\.php)(/.+)$;
    fastcgi_param SCRIPT_FILENAME {{ nginx_proxy_static_root }}/{{ item.host }}/$fastcgi_script_name;
    fastcgi_pass unix:/var/run/php5-fpm.sock;
    fastcgi_index index.php;
    include fastcgi_params;
  }
  {% endif %}

  {% if item.backend is defined %}
  location @{{item.host}}_backend {
    proxy_pass {{ item.backend }};
  }
  location / {
    try_files $uri @{{ item.host }}_backend;
  }
  {% else %}
  location / {
    root {{nginx_proxy_static_root}}/{{ item.host }};
  }
  {% endif %}
}
